<% # https://github.com/bootstrap-ruby/bootstrap_form/blob/master/README.md %>
<%= bootstrap_form_with(model: sheet, local: true) do |f| %>

  <%= render "shared/errors", object: sheet %>

  <%= f.text_field :customer %>
  <%= f.date_field :received_date %>
  <%= f.text_field :rims %>
  <%= f.text_area :info, rows: 7, placeholder: "About this order" %>
  <%= f.text_field :rim_tape %>
  <%= f.text_field :spoke_info, placeholder: "Sapim Race etc" %>
  <%= f.select :pattern, Sheet::PATTERNS %>
  <%= f.number_field :holes %>
  <%= f.number_field :rim_erd %>
      <%= f.label :new_build, "Yes, new build" %>
      <%= f.radio_button :new_build, true, checked: true %>
      <%= f.label :new_build, "No, repair job" %>
      <%= f.radio_button :new_build, false %>
  <%= f.submit %>
<% end %>
